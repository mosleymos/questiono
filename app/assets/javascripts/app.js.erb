// Constante de l'application nom url
var questiono ="/questionoapp.herokuapp.com";

// Helpers personnels

var cl = function cl(something){
   return console.log(something); 
};

var ce  = function ce(error){
    return console.error(error);
};



// Application angular
angular.module('questionoapp', ['ngRoute', 'ngResource'])

.controller('QuestionListCtrl', function($scope, $http){
    $http.get( questiono +'/questions.json')
    .success(function(data){
        $scope.questions = data ;
    })
    .error(function(data){
        ce(data);
    })
});
